{
  "name": "plasma_framework",
  "version": "0.0.1",
  "description": "Plasma Framework",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.0.22",
    "async": "^3.1.0",
    "dotenv": "^8.0.0",
    "lodash.clonedeep": "^4.5.0",
    "openzeppelin-solidity": "2.3.0",
    "solidoc": "^1.0.5"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eth-gas-reporter": "^0.2.14",
    "eth-sig-util": "^2.2.0",
    "ethereumjs-util": "^6.1.0",
    "openzeppelin-test-helpers": "^0.4.3",
    "rlp": "^2.2.3",
    "seedrandom": "^3.0.5",
    "solhint": "^2.2.0",
    "solidity-coverage": "^0.7.0-beta.2",
    "truffle": "5.0.40",
    "truffle-security": "https://git@github.com/ConsenSys/truffle-security.git",
    "asyncawait": "3.0.0"
  },
  "scripts": {
    "test": "truffle test",
    "coverage": "truffle run coverage",
    "docgen": "./scripts/docgen.sh",
    "linter": "node_modules/eslint/bin/eslint.js . --fix",
    "linter-sol": "node_modules/.bin/solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "mythx-quick": "npx truffle run verify --mode quick --apiKey $npm_package_config_mythxApiKey $npm_package_config_PlasmaFramework $npm_package_config_Vaults $npm_package_config_DepositVerifiers $npm_package_config_PaymentExitGame $npm_package_config_PaymentExitGameDeps $npm_package_config_SpendingConditions $npm_package_config_DeployedAsBaseContracts",
    "mythx-full": "npx truffle run verify --mode full $npm_package_config_PlasmaFramework $npm_package_config_Vaults $npm_package_config_DepositVerifiers $npm_package_config_PaymentExitGame $npm_package_config_PaymentExitGameDeps $npm_package_config_SpendingConditions $npm_package_config_DeployedAsBaseContracts"
  },
  "config": {
    "PlasmaFramework": "./contracts/src/framework/PlasmaFramework.sol:PlasmaFramework",
    "Vaults": "./contracts/src/vaults/EthVault.sol:EthVault ./contracts/src/vaults/Erc20Vault.sol:Erc20Vault",
    "DepositVerifiers": "./contracts/src/vaults/verifiers/EthDepositVerifier.sol:EthDepositVerifier ./contracts/src/vaults/verifiers/Erc20DepositVerifier.sol:Erc20DepositVerifier",
    "PaymentExitGame": "./contracts/src/exits/payment/PaymentExitGame.sol:PaymentExitGame",
    "PaymentExitGameDeps": "./contracts/src/exits/registries/SpendingConditionRegistry.sol:SpendingConditionRegistry ./contracts/src/exits/payment/PaymentTransactionStateTransitionVerifier.sol:PaymentTransactionStateTransitionVerifier",
    "SpendingConditions": "./contracts/src/exits/payment/spendingConditions/PaymentOutputToPaymentTxCondition.sol:PaymentOutputToPaymentTxCondition ./contracts/src/exits/fee/FeeClaimOutputToPaymentTxCondition.sol:FeeClaimOutputToPaymentTxCondition",
    "DeployedAsBaseContracts": "./contracts/mocks/utils/RLPMockSecurity.sol:RLPMockSecurity ./contracts/mocks/utils/BitsWrapper.sol:BitsWrapper ./contracts/mocks/utils/MerkleWrapper.sol:MerkleWrapper ./contracts/mocks/utils/PosLibWrapper.sol:PosLibWrapper",
    "mythxApiKey": "eyJhb...the rest of the api key here, get it from https://dashboard.mythx.io/#/console/tools"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omisego/plasma-contracts.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/omisego/plasma-contracts/issues"
  },
  "homepage": "https://github.com/omisego/plasma-contracts#readme"
}
